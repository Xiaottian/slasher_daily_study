<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

	<!-- 1.指定当前服务/应用的名字(同样的服务名字相同，不和别的服务同名) -->
	<dubbo:application name="user-service-provider"  />

	<!-- 2. 指定注册中心的位置 -->
	<dubbo:registry address="zookeeper://106.13.36.39:2181" />

	<!-- 3. 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880" />

	<!-- 4. 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.slasher.gmall.service.UserService" ref="userServiceImpl" />

	<!-- 连接监控中心 -->
	<dubbo:monitor protocol="registry"></dubbo:monitor>

	<!-- 5. 和本地bean一样实现服务 -->
	<bean id="userServiceImpl" class="com.slasher.gmall.service.impl.UserServiceImpl" />
</beans>